<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#FCFCFC">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#D2204C"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/tvValorEstado"
            style="@style/AppBaseGestores.EtiquetasValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvValorEstado"
            android:textColor="@color/blanco"
            android:textSize="23sp"
            android:textStyle="bold" />
</LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_layout">

        <TextView
            android:id="@+id/textview11a"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tipo de Servicio : "
            android:textColor="#D52639" />

        <TextView
            android:id="@+id/tvValorTipoServicio"
            style="@style/AppBaseGestores.EtiquetasValor"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:text="TIPOSERV"
            android:textStyle="bold" />
</LinearLayout>

<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
               <TextView
            android:id="@+id/textview12"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Id Caso : "
            android:textColor="#D52639" />

			<TextView
			    android:id="@+id/tvIdCaso"
			    style="@style/AppBaseGestores.EtiquetasDetalle"
			    android:layout_width="wrap_content"
			    android:layout_height="37dp"
			    android:layout_gravity="center_horizontal"
			    android:text="0000"
			    android:textColor="#000000" />
        
</LinearLayout>
        
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        style="@style/AppBaseGestores.VerticalLayoutInputs">

        <TextView
            android:id="@+id/tvTiempoCalculado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00:00:00"
            android:textSize="20sp"
            android:textStyle="normal|bold" />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_content_link" />
            
            <TextView
        android:id="@+id/tvServicioLink"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="" 
        android:minWidth="150dp"
        style="@style/AppBaseGestores.EtiquetasValor"/>

        </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >
           <TextView
        android:id="@+id/tvObservacionesCliente"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="tvObservacionesCliente" 
        android:minWidth="150dp"
        android:inputType="textMultiLine"
        style="@style/AppBaseGestores.EtiquetasValor"/>

</LinearLayout>





<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/AppBaseGestores.VerticalLayoutInputs">

        <TextView
            android:id="@+id/tvDatosDelServicio"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos del Servicio"
            android:textSize="18sp"
            android:textStyle="bold" />
</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
            android:id="@+id/textview90"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Titular:"
            android:textColor="#000000" />

            <TextView
                android:id="@+id/tvNombreCliente"
                style="@style/AppBaseGestores.EtiquetasValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="37dp"
                android:paddingLeft="10dp"
                android:text="tvNombreCliente" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
            android:id="@+id/textview91"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Contacto:"
            android:textColor="#000000" />

            <TextView
                android:id="@+id/tvContacto"
                style="@style/AppBaseGestores.EtiquetasValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="37dp"
                android:paddingLeft="10dp"
                android:text="tvContacto" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
            android:id="@+id/textview107"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Teléfono:"
            android:textColor="#000000" />

            <TextView
                android:id="@+id/tvTelefonoCliente"
                style="@style/AppBaseGestores.EtiquetasValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="37dp"
                android:paddingLeft="10dp"
                android:text="tvTelefonoCliente" />

        </LinearLayout>

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
            android:id="@+id/textview92"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Cli. Empresa:"
            android:textColor="#000000" />


            <TextView
                android:id="@+id/tvClienteEmpresa"
                style="@style/AppBaseGestores.EtiquetasValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="37dp"
                android:paddingLeft="10dp"
                android:text="tvClienteEmpresa" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
            android:id="@+id/textview93"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Dir. Asistencia:"
            android:textColor="#000000" />

            <TextView
                android:id="@+id/tvDireccionCliente"
                style="@style/AppBaseGestores.EtiquetasValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="37dp"
                android:paddingLeft="10dp"
                android:text="tvDireccionDeAsistencia" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
            android:id="@+id/textview94"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Dir. Destino:"
            android:textColor="#000000" />

            <TextView
                android:id="@+id/tvDireccionDestino"
                style="@style/AppBaseGestores.EtiquetasValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="37dp"
                android:paddingLeft="10dp"
                android:text="tvDireccionDeDestino" />

        </LinearLayout>
        

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/AppBaseGestores.VerticalLayoutInputs">

        <TextView
            android:id="@+id/tvDatosDelVehiculo"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos del Vehículo"
            android:textSize="18sp"
            android:textStyle="bold" />
</LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
               <TextView
            android:id="@+id/textview100"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Placa:"
            android:textColor="#000000" />

			<TextView
			    android:id="@+id/tvPlaca"
			    style="@style/AppBaseGestores.EtiquetasValor"
			    android:layout_width="match_parent"
			    android:layout_height="37dp"
			    android:layout_gravity="center_horizontal"
			    android:layout_weight="1"
			    android:text="--"
			    android:textColor="#000000" />
        
               <TextView
            android:id="@+id/textview104"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Color:"
            android:textColor="#000000" />

			<TextView
			    android:id="@+id/tvColor"
			    style="@style/AppBaseGestores.EtiquetasValor"
			    android:layout_width="match_parent"
			    android:layout_height="37dp"
			    android:layout_gravity="center_horizontal"
			    android:layout_weight="1"
			    android:text="--"
			    android:textColor="#000000" />
</LinearLayout>

<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
               <TextView
            android:id="@+id/textview105"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Marca:"
            android:textColor="#000000" />

			<TextView
			    android:id="@+id/tvMarca"
			    style="@style/AppBaseGestores.EtiquetasValor"
			    android:layout_width="match_parent"
			    android:layout_height="37dp"
			    android:layout_gravity="center_horizontal"
			    android:layout_weight="1"
			    android:text="--"
			    android:textColor="#000000" />
        
               <TextView
            android:id="@+id/textview106"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Modelo:"
            android:textColor="#000000" />

			<TextView
			    android:id="@+id/tvModelo"
			    style="@style/AppBaseGestores.EtiquetasValor"
			    android:layout_width="match_parent"
			    android:layout_height="37dp"
			    android:layout_gravity="center_horizontal"
			    android:layout_weight="1"
			    android:text="--"
			    android:textColor="#000000" />
</LinearLayout>

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/AppBaseGestores.VerticalLayoutInputs">

        <TextView
            android:id="@+id/tvDatosPercance"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Percance"
            android:textSize="18sp"
            android:textStyle="bold" />
</LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
               <TextView
            android:id="@+id/textview101"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Percance : "
            android:textColor="#000000" />

			<TextView
			    android:id="@+id/tvPercance"
			    style="@style/AppBaseGestores.EtiquetasValor"
			    android:layout_width="wrap_content"
			    android:layout_height="37dp"
			    android:layout_gravity="center_horizontal"
			    android:text="--"
			    android:textColor="#000000" />
        
</LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
               <TextView
            android:id="@+id/textview102"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Detalle:"
            android:textColor="#000000" />

			<TextView
			    android:id="@+id/tvDetPercance"
			    style="@style/AppBaseGestores.EtiquetasValor"
			    android:layout_width="wrap_content"
			    android:layout_height="37dp"
			    android:layout_gravity="center_horizontal"
			    android:layout_marginBottom="10dp"
			    android:text="--"
			    android:textColor="#000000" />
        
</LinearLayout>

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/AppBaseGestores.VerticalLayoutInputs">

        <TextView
            android:id="@+id/tvDatosCobroFacturacion"
            style="@style/AppBaseGestores.EtiquetasDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cobro y Facturación"
            android:textSize="18sp"
            android:textStyle="bold" />
</LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <WebView
            	android:id="@+id/wvCobroFacturacion"
			    style="@style/AppBaseGestores.EtiquetasValor"
			    android:layout_width="match_parent"
			    android:layout_height="100dp"
			    android:layout_gravity="center_horizontal"
            />
</LinearLayout>


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:background="@drawable/border_layout">
        
    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Propuesta de pago"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvPropuestaPago"
        style="@style/AppBaseGestores.EtiquetasValor"
        android:layout_width="wrap_content"
        android:text="tvPropuestaPago"
        android:visibility="gone" />
    <ImageView
                    android:id="@+id/pImage"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="0.11"
                    android:adjustViewBounds="false"
                    android:background="@null"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_llamar"
                    android:visibility="gone" />
    
</LinearLayout>    
<HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/layoutImages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
</HorizontalScrollView>
    
</LinearLayout>

</ScrollView>
